<link rel="stylesheet" type="text/css" href="/css/reservation.css">

<main>
    <div class="container">
        <div class=".col-md-6 .col-md-offset-3">
            <form action="/reservation" method="post">
                <div class="form-group">
                    <label for="date">예약 날짜</label>
                    <input type="text" name="reservation_date" class="form-control" id="date" value="{{ date }}" readonly="readonly" required>
                </div>
                <div class="form-group">
                    <label for="seat">예약 좌석</label>
                    <input type="text" name="seat_number" class="form-control" id="seat" value="{{ seat_number }}" readonly="readonly" required>
                </div>
                <div class="form-group">
                    <label for="username">예약자 이름</label>
                    <input type="text" name="username" class="form-control" id="username" placeholder="본인의 실명을 적어주세요." required>
                </div>
                <button type="submit" class="btn btn-primary btn-lg">예약하기</button>
            </form>
        </div>
    </div>
</main>

